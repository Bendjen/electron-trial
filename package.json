{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "",
  "main": "src/main/main.js",
  "scripts": {
    "start": "run-p dev:renderer dev:main",
    "dist": "run-s dist:renderer pack",
    "dist:dir": "run-s dist:renderer pack:dir",
    "dev:main":"cross-env NODE_ENV=development electron .",
    "dev:renderer": "cd src/renderer && yarn start",
    "dist:renderer": "cd src/renderer && yarn build",
    "pack": "electron-builder",
    "pack:dir": "electron-builder --dir"
  },
  "build": {
    "productName": "electron-app",
    "appId": "bendjen.0.1",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main",
      "src/renderer/build"
    ],
    "mac": {
      "icon": "icons/512x512.png"
    },
    "win": {
      "icon": "icons/512x512.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/512x512.png"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./icons/installerIcon.ico",
      "uninstallerIcon": "./icons/uninstallerIcon.ico",
      "installerHeaderIcon": "./icons/installerIcon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "electron-app"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://xxxxx/"
      }
    ]
  },
  "author": "bendjen",
  "license": "ISC",
  "devDependencies": {
    "cross-env": "^5.2.0",
    "electron": "^5.0.1",
    "electron-builder": "^20.40.2",
    "npm-run-all": "^4.1.5"
  }
}
